        let originalColumn = null;

        // --- Drag Start ---
        cards.forEach(card => {
            card.addEventListener('dragstart', function(e) {
                draggedCard = this;
                originalColumn = this.closest('.kanban-column');
                e.dataTransfer.setData('text/plain', this.dataset.dealId);
                e.dataTransfer.effectAllowed = "move";
                
                // Add a class for visual styling if needed, or just opacity
                requestAnimationFrame(() => {
                    this.style.opacity = '0.4';
                    this.style.transform = 'scale(0.95)';
                });
            });

            card.addEventListener('dragend', function() {
                this.style.opacity = '1';
                this.style.transform = 'none';
                draggedCard = null;
                originalColumn = null;
                
                // Clean up any hover effects
                columns.forEach(col => col.classList.remove('drag-over'));
            });
        });

        // --- Drag Over & Enter/Leave ---
        columns.forEach(col => {
            col.addEventListener('dragover', function(e) {
                e.preventDefault();
                e.dataTransfer.dropEffect = "move";
            });

            // Visual highlight for the column
            col.addEventListener('dragenter', function(e) {
                e.preventDefault();
                this.classList.add('drag-over');
            });

            col.addEventListener('dragleave', function(e) {
                this.classList.remove('drag-over');
            });

            // --- Drop ---
            col.addEventListener('drop', function(e) {
                e.preventDefault();
                this.classList.remove('drag-over'); // Remove highlight

                if (!draggedCard || !originalColumn) return;

                const newColumn = this.closest('.kanban-column');
                const newStageName = newColumn.dataset.stageName;
                const dealId = draggedCard.dataset.dealId;
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

                if (dealId && newStageName && newColumn !== originalColumn) {
                    // Optimistic UI Update: Move card immediately
                    this.appendChild(draggedCard);
                    
                    // Update Summaries immediately for snappiness
                    const oldStageName = originalColumn.dataset.stageName;
                    updateColumnSummary(oldStageName);
                    updateColumnSummary(newStageName);

                    // Send to Server
                    updateDealStageOnServer(dealId, newStageName, draggedCard, originalColumn, newColumn, token);
                }
            });
        });

