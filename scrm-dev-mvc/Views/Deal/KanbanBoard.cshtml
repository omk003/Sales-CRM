                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({
                        DealId: parseInt(dealId),
                        NewStageName: newStageName
                    })
                });

                if (!response.ok) {
                    // Revert UI if server fails
                    const error = await response.json();
                    alert(`Failed to move deal: ${error.message || 'Server error'}`);
                    
                    // Move card back
                    oldColumnEl.querySelector('.kanban-column-body').appendChild(cardElement);
                    updateColumnSummary(oldColumnEl.dataset.stageName);
                    updateColumnSummary(newColumnEl.dataset.stageName);
