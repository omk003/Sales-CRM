@model scrm_dev_mvc.Models.ViewModels.OrganizationViewModel
@{
    Layout = null; // Disables the main layout
    ViewData["Title"] = "Manage Organization";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>

    <div style="padding: 4rem;">

        <h2>@ViewData["Title"]: @Model.OrganizationName</h2>
        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Message"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }

        <div class="card bg-light border-danger mb-4">
            <div class="card-header">Danger Zone</div>
            <div class="card-body">
                <h5 class="card-title">Delete this Organization</h5>
                <p class="card-text">
                    This action is permanent and cannot be undone. You can only delete an organization
                    after all its users have been removed.
                </p>
                <form asp-action="DeleteOrganization" method="post"
                      onsubmit="return confirm('Are you sure you want to PERMANENTLY delete this organization? This cannot be undone.');">
                    <input type="hidden" asp-for="OrganizationId" name="id" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        Delete @Model.OrganizationName
                    </button>
                </form>
            </div>
        </div>

        <h3>Users in @Model.OrganizationName</h3>
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Users.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">No users found in this organization.</td>
                    </tr>
                }
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td><span class="badge bg-secondary">@user.Role</span></td>
                        <td>
                            <form asp-action="DeleteUser" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this user: @user.Email?');">
                                <input type="hidden" name="id" value="@user.UserId" />
                                <input type="hidden" name="organizationId" value="@Model.OrganizationId" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">
                                    Delete User
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                &laquo; Back to Organization List
            </a>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>