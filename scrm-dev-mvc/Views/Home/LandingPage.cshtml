@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SCRM - Simplify Your Sales Process</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" type="image/png" href="~/favicon.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .brand-red {
            background-color: #ff2753;
        }

        .brand-text {
            color: #ff2753;
        }

        .brand-border {
            border-color: #ff2753;
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">

    <header class="bg-white/80 backdrop-blur-md sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <img src="~/favicon.png" class="w-8 h-8" alt="SCRM Logo">
                <h1 class="text-2xl font-bold text-gray-900">SCRM</h1>
            </div>            
            <div>
                <a asp-action="Login" asp-controller="Auth" class="text-gray-600 hover:text-gray-900 mx-3">Login</a>
                <a asp-action="Register" asp-controller="Auth" class="brand-red text-white font-semibold px-5 py-2 rounded-lg hover:opacity-90 transition-opacity">
                    Start Now
                </a>
            </div>
        </nav>
    </header>

    <main>
        <section class="text-center py-20 md:py-32 px-6 bg-white">
            <div class="container mx-auto">
                <h1 class="text-4xl md:text-6xl font-extrabold text-gray-900 leading-tight">
                    Your Entire Sales Process, <span class="brand-text">Simplified</span>.
                </h1>
                <p class="mt-6 text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                    Stop chasing leads and start closing deals. SCRM is the refreshingly simple, powerful CRM that helps your team win, without the clutter.
                </p>
                <div class="mt-10">
                    <a asp-action="Register" asp-controller="Auth" class="brand-red text-white font-semibold px-8 py-4 rounded-lg text-lg hover:opacity-90 transition-opacity shadow-lg shadow-red-500/20">
                        Start Now for Free
                    </a>
                </div>
                <div class="mt-16 max-w-5xl mx-auto">
                    <img src="~/dashboard.jpg" alt="SCRM Dashboard Screenshot" class="rounded-2xl shadow-2xl ring-1 ring-gray-900/10">
                </div>
            </div>
        </section>

        <section class="py-20 md:py-28">
            <div class="container mx-auto px-6 space-y-20">

                <div class="grid md:grid-cols-2 gap-12 md:gap-16 items-center">
                    <div class="md:order-last">
                        <img src="~/contact.png" alt="Contact Management" class="rounded-xl shadow-lg w-full">
                    </div>
                    <div>
                        <span class="text-sm font-bold brand-text uppercase">Unified View</span>
                        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">One Place for Contacts & Companies</h2>
                        <p class="mt-4 text-lg text-gray-600">
                            Get a 360° view of every customer. See all contact details, communication history, associated deals, and notes in one central, organized profile. Stop digging through inboxes and spreadsheets forever.
                        </p>
                    </div>
                </div>

                <div class="grid md:grid-cols-2 gap-12 md:gap-16 items-center">
                    <div>
                        <img src="~/deals.png" alt="Deals Pipeline" class="rounded-xl shadow-lg w-full">
                    </div>
                    <div>
                        <span class="text-sm font-bold brand-text uppercase">Visual Pipeline</span>
                        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">Track Deals with Clarity</h2>
                        <p class="mt-4 text-lg text-gray-600">
                            Visualize your entire sales pipeline with a simple drag-and-drop interface. Instantly see which deals need attention and forecast your revenue with confidence. Never let an opportunity slip through the cracks again.
                        </p>
                    </div>
                </div>

                <div class="grid md:grid-cols-2 gap-12 md:gap-16 items-center">
                    <div class="md:order-last">
                        <img src="~/workflow.png" alt="Workflow Automation" class="rounded-xl shadow-lg w-full">
                    </div>
                    <div>
                        <span class="text-sm font-bold brand-text uppercase">Automation</span>
                        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">Automate the Busywork</h2>
                        <p class="mt-4 text-lg text-gray-600">
                            Free up your team to focus on selling, not data entry. Automate follow-up emails, task creation, and data updates, so your team can spend more time building relationships and closing deals.
                        </p>
                    </div>
                </div>

            </div>
        </section>

        
        <section class="bg-white py-20 md:py-28">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-3xl md:text-5xl font-extrabold text-gray-900">
                    Ready to Supercharge Your Sales?
                </h2>
                <p class="mt-5 text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
                    Join thousands of sales teams closing deals smarter, not harder. Start your free trial today and get your team set up in minutes.
                </p>
                <div class="mt-10">
                    <a asp-action="Register" asp-controller="Auth" class="brand-red text-white font-semibold px-8 py-4 rounded-lg text-lg hover:opacity-90 transition-opacity shadow-lg shadow-red-500/20">
                        Get Started - It's Free
                    </a>
                </div>
            </div>
        </section>
    </main>

    <footer class="bg-gray-100 border-t border-gray-200">
        <div class="container mx-auto px-6 py-8 text-center text-gray-500">
            <p>&copy; 2025 SCRM. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
