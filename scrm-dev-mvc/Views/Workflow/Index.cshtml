@using scrm_dev_mvc.Utilities
@model IEnumerable<scrm_dev_mvc.Models.Workflow>

<style>
    :root {
        --brand-primary: hsl(347.78, 100%, 57.65%);
        --brand-primary-dark: hsl(347.78, 100%, 50%);
    }

    .btn-brand {
        background-color: var(--brand-primary);
        color: white;
    }

        .btn-brand:hover {
            background-color: var(--brand-primary-dark);
        }

    /* --- STYLES FOR THE NEW BUTTONS --- */
    .btn-toggle {
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.75rem; /* text-xs */
        line-height: 1rem;
        transition: background-color 0.2s;
        border: none;
        cursor: pointer;
    }

    .btn-toggle-deactivate {
        background-color: #FEE2E2; /* red-100 */
        color: #B91C1C; /* red-700 */
    }

        .btn-toggle-deactivate:hover {
            background-color: #FECACA; /* red-200 */
        }

    .btn-toggle-activate {
        background-color: #D1FAE5; /* green-100 */
        color: #047857; /* green-700 */
    }

        .btn-toggle-activate:hover {
            background-color: #A7F3D0; /* green-200 */
        }

    .btn-delete {
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.75rem; /* text-xs */
        line-height: 1rem;
        transition: background-color 0.2s;
        border: none;
        cursor: pointer;
        background-color: #F8F8F8; /* A light gray */
        color: #B91C1C; /* red-700 */
        border: 1px solid #E5E7EB; /* gray-200 */
    }

        .btn-delete:hover {
            background-color: #FEE2E2; /* red-100 */
            border-color: #FECACA; /* red-200 */
        }

    .btn-edit {
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.75rem; /* text-xs */
        line-height: 1rem;
        transition: background-color 0.2s;
        border: none;
        cursor: pointer;
        background-color: #F8F8F8; /* A light gray */
        color: #4B5563; /* gray-600 */
        border: 1px solid #E5E7EB; /* gray-200 */
    }

        .btn-edit:hover {
            background-color: #F3F4F6; /* gray-100 */
            border-color: #D1D5DB; /* gray-300 */
        }
    /* ------------------------------------- */
</style>

<div class="max-w-7xl mx-auto py-4 space-y-4">

    @if (TempData["Message"] != null)
    {
        <div id="tempDataMessage" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg relative" role="alert">
            <span class="block sm:inline">@TempData["Message"]</span>
            <button onclick="this.parentElement.style.display='none'" class="absolute top-0 bottom-0 right-0 px-4 py-3">
                <i class="fas fa-times text-green-700"></i>
            </button>
        </div>
    }

    <div class="bg-white p-4 sm:p-6 rounded-lg shadow-sm">

        <div class="flex flex-col sm:flex-row justify-between sm:items-center mb-4">
            <h3 class="text-2xl font-bold text-gray-900">Workflows</h3>
            <a asp-action="Create" class="btn-brand flex items-center font-bold py-2 px-4 rounded-lg shadow-sm text-sm transition duration-150 mt-3 sm:mt-0">
                <i class="fas fa-plus mr-2"></i> Create New Workflow
            </a>
        </div>

        <div class="space-y-4">
            @if (!Model.Any())
            {
                <p class="text-gray-500">You have not created any workflows yet.</p>
            }

            @foreach (var workflow in Model)
            {
                <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex justify-between items-center">
                        <h4 class="text-lg font-semibold text-gray-800">@workflow.Name</h4>

                        <div class="flex items-center space-x-2">
                            <span class="text-sm font-medium @(workflow.IsActive ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800") px-2 py-0.5 rounded-full">
                                @(workflow.IsActive ? "Active" : "Inactive")
                            </span>

                            <form asp-action="ToggleActive" asp-route-id="@workflow.Id" method="post" class="mb-0">
                                @Html.AntiForgeryToken()
                                @if (workflow.IsActive)
                                {
                                    <button type="submit" class="btn-toggle btn-toggle-deactivate">
                                        Deactivate
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn-toggle btn-toggle-activate">
                                        Activate
                                    </button>
                                }
                            </form>
                            <a asp-action="Edit" asp-route-id="@workflow.Id" class="btn-edit">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@workflow.Id" method="post" class="mb-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn-delete"
                                        onclick="return confirm('Are you sure you want to delete this workflow? This cannot be undone.')">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="mt-2">
                        <p class="text-sm text-gray-600">
                            <span class="font-semibold">WHEN:</span> @workflow.Event.GetDisplayName()
                        </p>
                        @foreach (var action in workflow.Actions)
                        {
                            <p class="text-sm text-gray-600 mt-1">
                                <span class="font-semibold">DO:</span> @action.ActionType.GetDisplayName()
                            </p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>