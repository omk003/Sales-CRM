@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SCRM</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/scrm_dev_mvc.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <style>
        /* ======== LAYOUT BASE ======== */
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f9f9f9;
            font-family: 'Segoe UI', sans-serif;
            color: #333;
        }

        /* ======== SIDEBAR ======== */
        .sidebar {
            width: 250px;
            background-color: #ffffff;
            border-right: 1px solid #e5e5e5;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            padding: 1.5rem 1rem;
        }


        .sidebar-menu ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu li {
            margin-bottom: 0.7rem;
        }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 0.6rem 1rem;
            border-radius: 8px;
            color: #333;
            text-decoration: none;
            transition: all 0.2s ease;
            font-weight: 500;
        }

            .sidebar-menu a:hover,
            .sidebar-menu a.active {
                background-color: var(--color-accent2);
                color: #333;
                box-shadow: 0 -4px 4px rgba(0,0,0,0.1);
            }

            .sidebar-menu a.disabled {
                pointer-events: none;
                opacity: 0.5;
            }

        .sidebar-footer {
            border-top: 1px solid #eee;
            padding-top: 1rem;
            font-size: 0.95rem;
        }

            .sidebar-footer a {
                display: block;
                color: #333;
                text-decoration: none;
                padding: 0.4rem 1rem;
                border-radius: 6px;
                transition: background 0.2s;
            }

                .sidebar-footer a:hover {
                    background-color: #f8f8f8;
                }

        .logout-btn {
            color: #dc3545 !important;
        }

        /* ======== MAIN CONTENT ======== */
        .main-content {
            margin-left: 250px;
            padding: 2rem;
            flex-grow: 1;
        }

        /* ======== PROFILE BOX ======== */
        .profile-box {
            text-align: center;
            margin-bottom: 2rem;
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 10px;
            border: 1px solid #eaeaea;
        }

            .profile-box .name {
                font-weight: 600;
                margin-top: 0.5rem;
                color: #333;
            }

            .profile-box small {
                color: #777;
            }

        footer.footer {
            border-top: 1px solid #e5e5e5;
            padding: 1rem;
            margin-top: 3rem;
            text-align: center;
            color: #666;
            background-color: #fafafa;
        }
        /* ======== NEW USER PROFILE ======== */
        .user-profile {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px;
            margin-bottom: 2rem;
            border-radius: 8px;
           
        }

        .profile-icon {
            flex-shrink: 0; /* Prevents the icon from shrinking */
            width: 40px;
            height: 40px;
            background-color: #e9ecef;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            font-weight: 500;
            color: #333;
        }

        .profile-info {
            flex-grow: 1; /* Allows this element to take up remaining space */
            min-width: 0; /* Important for flexbox text truncation */
        }

        .profile-name {
            font-weight: 600;
            color: #333;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .profile-email {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 0.85rem;
            color: #6c757d;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background-color: #28a745; /* Green status color */
            border-radius: 50%;
            flex-shrink: 0;
        }

        .profile-actions {
            color: #6c757d;
        }

        .sidebar-divider {
            margin: 1rem 0; /* Adds space above and below the line */
            border: none;
            border-top: 1px solid var(--text-tertiary);
            
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div>
            @* <div class="sidebar-header">SCRM</div> *@

            @if (User?.Identity?.IsAuthenticated == true)
            {
                var firstName = User.FindFirst(ClaimTypes.GivenName)?.Value ?? User.Identity.Name?.Split('@')[0];
                var organizationName = User.Claims.FirstOrDefault(c => c.Type == "OrganizationName")?.Value;
                bool hasOrganization = !string.IsNullOrEmpty(organizationName);

                @* --- REPLACE the old profile-box div with this new user-profile div --- *@

                <div class="user-profile">
                    <div class="profile-icon">
                        <span>#</span>
                    </div>
                    <div class="profile-info">
                        @if (!string.IsNullOrEmpty(firstName))
                        {
                            <div class="profile-name">@firstName</div>
                        }
                        <div class="profile-email">
                            @* <span class="status-dot"></span> *@
                            @User.Identity.Name  @* This usually holds the email *@
                        </div>
                    </div>
                   
                </div>
                <hr class="sidebar-divider"> 
                <div class="sidebar-menu">
                    @* --- GET CURRENT PAGE INFO --- *@
                    @{
                        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                    }

                    <ul>
                        @* --- UPDATED CLASS LOGIC --- *@
                        @* <li><a asp-controller="Home" asp-action="Index" class="@(currentController == "Home" ? "active" : "")"><i class="bi bi-house"></i> Dashboard</a></li> *@

                        @* --- UPDATED CLASS LOGIC (combines with existing 'disabled' check) --- *@
                        <li><a asp-controller="Contact" asp-action="Index" class="@(hasOrganization ? "" : "disabled") @(currentController == "Contact" ? "active" : "")"><i class="bi bi-person-lines-fill"></i> Contacts</a></li>

                        @* --- UPDATED CLASS LOGIC (combines with existing 'disabled' check) --- *@
                        <li><a asp-controller="Company" asp-action="Index" class="@(hasOrganization ? "" : "disabled") @(currentController == "Company" ? "active" : "")"><i class="bi bi-buildings"></i> Companies</a></li>

                        <li><a asp-controller="Deal" asp-action="KanbanBoard"><i class="bi bi-kanban"></i> Deals</a></li>
                        <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-grid"></i> Workspace</a></li>
                        <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-diagram-3"></i> Workflow</a></li>
                    </ul>
                </div>
            }
            else
            {
                <div class="sidebar-menu">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-box"></i> Product</a></li>
                        <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-cash-coin"></i> Pricing</a></li>
                        <li><a asp-controller="Home" asp-action="Index"><i class="bi bi-lightbulb"></i> Solutions</a></li>
                    </ul>
                </div>
            }
        </div>

        <div class="sidebar-footer">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="User" asp-action="Index"><i class="bi bi-person"></i> Profile</a>

                @if (string.IsNullOrEmpty(User.FindFirstValue("OrganizationName")))
                {
                    <a asp-controller="Organization" asp-action="Register"><i class="bi bi-building"></i> Register Org</a>
                }
                else if (User.IsInRole("SalesAdmin") || User.IsInRole("SalesAdminSuper") || User.IsInRole("ApplicationAdmin"))
                {
                    <a asp-controller="Organization" asp-action="Register"><i class="bi bi-people"></i> Invite Team</a>
                }

                <a asp-controller="Auth" asp-action="Logout" class="logout-btn"><i class="bi bi-box-arrow-right"></i> Sign Out</a>
            }
            else
            {
                <partial name="_Login.cshtml" />
            }
        </div>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        @if (!User?.Identity?.IsAuthenticated == true)
        {
            <footer class="footer">
                &copy; 2025 - SCRM - Onkar
            </footer>
        }
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
