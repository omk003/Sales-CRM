@if (TempData["Message"] != null)
{
    <div id="tempDataMessage" class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="card border-0 my-4">
    <div class=" ml-0 px-4">
        <div class="row">
            <div class="col-12">
                <h3 class="py-2">Contacts</h3>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
                <!-- Left: Edit/Delete buttons -->
                <div id="actionBar" style="width: 150px; visibility: hidden;">
                    <button id="btnEdit" class="btn btn-custom btn-sm me-2">Edit</button>
                    <button id="btnDelete" class="btn btn-custom-delete btn-sm">Delete</button>
                </div>

                <!-- Right: Create Contact button -->
                <a href="@Url.Action("Insert", "Contact")" class="btn btn-custom btn-sm">
                    Create Contact
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
     

        <table id="tblData" class="table" style="width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>NAME</th>
                    <th>EMAIL</th>
                    <th>PHONE NUMBER</th>
                    <th>LEAD STATUS</th>
                    <th>CREATE DATE</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script src="~/js/contact.js"></script>
}
