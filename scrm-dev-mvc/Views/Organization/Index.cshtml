
    <div class="card p-4 mt-3 shadow-sm">
        <h5>Invite Your Team</h5>
        <form asp-action="SendInvitation" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="Email" placeholder="Enter team member's email" required />
            </div>
            <div class="mb-3">
                <label for="role" class="form-label">Permission</label>
                <select class="form-select" id="role" name="RoleId" required>
                    <option value="3">Sales Admin</option>
                    <option value="4">Sales User</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Send Invitation</button>
        </form>
    </div>


