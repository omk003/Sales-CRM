<!-- Reassign and Delete Modal -->
<div class="modal" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUserModalLabel">Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-action="DeleteUser" asp-controller="Organization">
                <div class="modal-body">
                    <p>This user may have resources and tasks assigned. Please reassign them to a new user before deleting.</p>

                    <p>Deleting user: <strong id="deletingUserName"></strong></p>

                    <!-- Hidden fields for the form -->
                    <input type="hidden" name="organizationId" value="@Model.OrganizationId" />
                    <input type="hidden" id="modalUserId" name="userId" value="" />

                    <div class="mb-3">
                        <label for="modalNewUserId" class="form-label">Reassign to:</label>
                        <select id="modalNewUserId" name="newUserId" class="form-select" required>
                            <!-- Options will be populated by JavaScript -->
                        </select>
                    </div>
                    <div id="reassignError" class="text-danger" style="display:none;">
                        You must select another user to reassign data to.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" id="confirmDeleteButton" class="btn btn-custom-delete">Reassign and Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {

            // --- START: Forceful Modal Cleanup ---
            // This script fixes a bug where a "stuck" modal backdrop
            // (from the TempData alert) can make the page unclickable.
            try {
                const backdrops = document.querySelectorAll('.modal-backdrop');
                backdrops.forEach(backdrop => {
                    if (backdrop.parentNode) {
                        backdrop.parentNode.removeChild(backdrop);
                    }
                });

                if (document.body.classList.contains('modal-open')) {
                    document.body.classList.remove('modal-open');
                }
            } catch (e) {
                console.error("Error during modal cleanup: ", e);
            }
            // --- END: Forceful Modal Cleanup ---

            // --- START: Auto-dismiss TempData alerts ---
            // This closes the alerts to prevent them from
            // conflicting with other modal operations.
            try {
                var tempDataAlert = document.getElementById('tempDataMessage');
                // Check if bootstrap.Alert exists before using it
                if (tempDataAlert && (typeof bootstrap !== 'undefined') && bootstrap.Alert) {
                    var bsAlert = new bootstrap.Alert(tempDataAlert);
                    setTimeout(function() {
                        bsAlert.close();
                    }, 5000); // Close after 5 seconds
                }

                var tempDataError = document.getElementById('tempDataError');
                if (tempDataError && (typeof bootstrap !== 'undefined') && bootstrap.Alert) {
                    var bsErrorAlert = new bootstrap.Alert(tempDataError);
                    setTimeout(function() {
                        bsErrorAlert.close();
                    }, 5000); // Close after 5 seconds
                }
            } catch (e) {
                console.error("Error auto-dismissing alerts: ", e);
            }
            // --- END: Auto-dismiss TempData alerts ---

            // Store the user list from the model in a JavaScript variable
            const allUsers = @Html.Raw(Json.Serialize(Model.Users.Select(u => new { u.UserId, u.FullName })));

            var deleteUserModal = document.getElementById('deleteUserModal');

            // Check if modal element exists before adding listener
            if (deleteUserModal) {
                deleteUserModal.addEventListener('show.bs.modal', function (event) {
                    // --- START: Manual aria-hidden FIX ---
                    // This manually removes the aria-hidden attribute when the modal is shown.
                    // This is necessary because the TempData/alert conflict is breaking
                    // Bootstrap's default behavior, which causes the accessibility warning.
                    // deleteUserModal.setAttribute('aria-hidden', 'false');
                    // --- END: Manual aria-hidden FIX ---

                    // Button that triggered the modal
                    var button = event.relatedTarget;

                    // Check if button exists
                    if (!button) {
                        return;
                    }

                    // Extract info from data-bs-* attributes
                    var userIdToDelete = button.getAttribute('data-user-id');
                    var userNameToDelete = button.getAttribute('data-user-name');

                    // Get modal elements
                    var modalTitle = deleteUserModal.querySelector('.modal-title');
                    var modalDeletingUserName = deleteUserModal.querySelector('#deletingUserName');
                    var modalUserIdInput = deleteUserModal.querySelector('#modalUserId');
                    var modalNewUserSelect = deleteUserModal.querySelector('#modalNewUserId');
                    var confirmButton = deleteUserModal.querySelector('#confirmDeleteButton');
                    var reassignError = deleteUserModal.querySelector('#reassignError');

                    // Update modal content
                    if(modalTitle) modalTitle.textContent = 'Delete ' + userNameToDelete;
                    if(modalDeletingUserName) modalDeletingUserName.textContent = userNameToDelete + ' (' + userIdToDelete + ')';
                    if(modalUserIdInput) modalUserIdInput.value = userIdToDelete;

                    // Clear previous options from select
                    if(modalNewUserSelect) modalNewUserSelect.innerHTML = '';

                    var hasOtherUsers = false;

                    // Populate select with all users *except* the one being deleted
                    if (allUsers && Array.isArray(allUsers)) {
                        allUsers.forEach(function(user) {
                            if (user.userId !== userIdToDelete) {
                                var option = document.createElement('option');
                                option.value = user.userId;
                                option.textContent = user.fullName;
                                modalNewUserSelect.appendChild(option);
                                hasOtherUsers = true;
                            }
                        });
                    }

                    // Handle case where there are no other users to reassign to
                    if (!hasOtherUsers) {
                        if(reassignError) {
                            reassignError.textContent = 'There are no other users in this organization to reassign data to. You cannot delete this user.';
                            reassignError.style.display = 'block';
                        }
                        if(confirmButton) confirmButton.disabled = true;
                        if(modalNewUserSelect) modalNewUserSelect.disabled = true;
                    } else {
                        if(reassignError) reassignError.style.display = 'none';
                        if(confirmButton) confirmButton.disabled = false;
                        if(modalNewUserSelect) modalNewUserSelect.disabled = false;
                    }
                });

                // --- START: Manual aria-hidden FIX (Cleanup) ---
                // This manually adds the aria-hidden attribute back when the modal is hidden,
                // ensuring it's correctly set for assistive tech when closed.
                /*
                deleteUserModal.addEventListener('hide.bs.modal', function (event) {
                    deleteUserModal.setAttribute('aria-hidden', 'true');
                });
                */
                // --- END: Manual aria-hidden FIX (Cleanup) ---
            }
        });
    </script>
} *@

