@*
    This view is now refactored to use Tailwind CSS and your brand color,
    matching the style of your other pages.
*@

<style>
    /* Your brand color */
    :root {
        --brand-primary: hsl(347.78, 100%, 57.65%);
        --brand-primary-dark: hsl(347.78, 100%, 50%);
        --brand-primary-light: hsl(347.78, 100%, 95%);
        --brand-primary-selected: hsl(347.78, 100%, 90%);
    }

    /* 1. Style the "Create" button with your brand color */
    .btn-brand {
        background-color: var(--brand-primary);
        color: white;
    }

        .btn-brand:hover {
            background-color: var(--brand-primary-dark);
        }

    /* 2. Fix "plain white" table with zebra striping */
    #tblData tbody tr:nth-child(even) {
        background-color: #f9fafb; /* Tailwind's bg-gray-50 */
    }

    /* 3. Add a brand-colored hover effect */
    #tblData tbody tr:hover {
        background-color: var(--brand-primary-light);
        cursor: pointer;
    }

    /* 4. Style the selected row (when checkbox is clicked) */
    #tblData tbody tr.selected {
        background-color: var(--brand-primary-selected) !important;
    }

    /* 5. Style the checkboxes to use your brand color */
    #tblData tbody tr td input[type="checkbox"]:checked {
        accent-color: var(--brand-primary);
        transform: scale(1.1);
    }
</style>

<div class="max-w-7xl mx-auto py-4 space-y-4">

    @if (TempData["Message"] != null)
    {
        <div id="tempDataMessage" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg relative" role="alert">
            <span class="block sm:inline">@TempData["Message"]</span>
            <button onclick="this.parentElement.style.display='none'" class="absolute top-0 bottom-0 right-0 px-4 py-3">
                <i class="fas fa-times text-green-700"></i>
            </button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div id="tempDataError" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative" role="alert">
            <span class="block sm:inline">@TempData["Error"]</span>
            <button onclick="this.parentElement.style.display='none'" class="absolute top-0 bottom-0 right-0 px-4 py-3">
                <i class="fas fa-times text-red-700"></i>
            </button>
        </div>
    }

    <div class="bg-white p-4 sm:p-6 rounded-lg shadow-sm">

        <div class="flex flex-col sm:flex-row justify-between sm:items-center mb-4">

            <h3 class="text-2xl font-bold text-gray-900">Company</h3>

            <div class="flex items-center space-x-2 mt-3 sm:mt-0">

                <div id="actionBar" class="flex space-x-2" style="visibility: hidden;">
                    <button id="btnEdit" class="flex items-center bg-white hover:bg-gray-100 text-black font-semibold py-2 px-4 rounded-lg shadow-sm text-sm transition duration-150 border border-gray-300">
                        <i class="fas fa-edit mr-2"></i> Edit
                    </button>
                    <button id="btnDelete" class="flex items-center bg-white hover:bg-gray-100 text-black font-semibold py-2 px-4 rounded-lg shadow-sm text-sm transition duration-150 border border-gray-300">
                        <i class="fas fa-trash mr-2"></i> Delete
                    </button>
                </div>

                <a href="@Url.Action("Insert", "Company")"
                   class="btn-brand flex items-center font-bold py-2 px-4 rounded-lg shadow-sm text-sm transition duration-150">
                    <i class="fas fa-plus mr-2"></i> Create Company
                </a>
            </div>
        </div>

        <div class="overflow-x-auto">
            <div class="min-w-full inline-block align-middle">

                <table id="tblData" class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company Name</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">City</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Country</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Owner</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Create Date</th>
                        </tr>
                    </thead>

                    <tbody class="bg-white">
                    </tbody>

                </table>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
