@if (TempData["Message"] != null)
{
    // Added an id="tempDataMessage" to the div
    <div id="tempDataMessage" class="alert alert-info">
        @TempData["Message"]
    </div>
}

<div class="card border-0 my-4">
    <div class=" ml-0 px-4">
        <div class="row">
            <div class="col-12">
                <h3 class="py-2">Company</h3>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
                <!-- Left: Edit/Delete buttons -->
                <div id="actionBar" style="width: 150px; visibility: hidden;">
                    <button id="btnEdit" class="btn btn-custom btn-sm me-2">Edit</button>
                    <button id="btnDelete" class="btn btn-custom-delete btn-sm">Delete</button>
                </div>

                <!-- Right: Create Contact button -->
                <a href="@Url.Action("Insert", "Company")" class="btn btn-custom btn-sm">
                    Create Company
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @* <div id="actionBar" class="d-none mb-2">
            <button id="btnEdit" class="btn btn-primary">Edit</button>
            <button id="btnDelete" class="btn btn-danger">Delete</button>
        </div> *@

        <table id="tblData" class="table" style="width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>COMPANY NAME</th>
                    <th>CITY</th>
                    <th>COUNTRY</th>
                    <th>OWNER</th>
                    <th>CREATE DATE</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
